@model Aspose.Slides.Web.UI.Models.Interfaces.IResultViewModel

<div id="DownloadPlaceHolder" class="hidden">
    <div class="filesendemail">
        <div class="filesuccess">
            <label class="dz-message needsclick" id="SuccessMessage">@Model.SuccessMessage</label>
            <span class="downloadbtn convertbtn full-width">
                <a href="" id="DownloadButton" class="btn btn-success btn-lg btn-block">@Model.DownloadButtonText &nbsp;<i class="fa fa-download"></i></a>
            </span>
            <div class="clearfix">&nbsp;</div>
            <div id="viewerplaceholder" class="hidden">
                <span class="viewerbtn full-width">
                    <a href="" id="ViewerButton" target="_blank" class="btn btn-success btn-lg btn-block">@Model.ViewButtonText&nbsp;<i class="fa fa-eye"></i></a>
                </span>
                <div class="clearfix">&nbsp;</div>
            </div>
            <div id="editorPlaceholder" class="hidden">
                <span class="viewerbtn full-width">
                    <a href="" id="EditorButton" target="_blank" class="btn btn-success btn-lg btn-block">@Model.EditButtonText&nbsp;<i class="fa fa-edit"></i></a>
                </span>
                <div class="clearfix">&nbsp;</div>
            </div>
            <a href="" class="btn btn-link refresh-c">@Model.ProcessAnotherText &nbsp;<i class="fa-refresh fa"></i></a>
            <a class="btn btn-link" target="_blank" href="@Model.CloudApiLink">Cloud API &nbsp;<i class="fa-cloud fa"></i></a>
            <a class="btn btn-link" target="_blank" href="@Model.OnPremiseApiLink">On Premise API &nbsp;<i class="fa-server fa"></i></a>
        </div>

        <p>@Model.SendToText</p>
        <div class="col-5 sendemail">
            <div class="input-group input-group-lg">
                <input type="email" id="EmailToInput" name="EmailToInput" class="form-control" placeholder="email@domain.com" value="@Model.EmailTo" />
                <input type="hidden" id="DownloadUrlInputHidden" name="DownloadUrlInput" />
                <span class="input-group-btn">
                    <a class="btn btn-success" type="button" id="sendEmailButton">
                        <i class="fa fa-envelope-o fa"></i>
                    </a>
                </span>
            </div>
        </div>
        <p class="bookmarklet">@Html.Raw(Model.BookmarkText)</p>
    </div>
</div>

@section scripts {

}